<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/main_scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <GridLayout

        android:id="@+id/main_gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="90sp"
        android:numColumns="auto_fit"
        android:verticalSpacing="10sp"
        android:horizontalSpacing="10sp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:columnOrderPreserved="false">


        <ImageView
            android:id="@+id/main_imageView"
            android:src="@drawable/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/main_logo_desc" />

        <TextView
            android:text="@string/main_text"
            android:id="@+id/main_textView"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_marginTop="60sp"
            android:layout_marginStart="60dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right" />

        <ImageButton
            android:id="@+id/main_imageButton"
            android:src="@android:drawable/ic_menu_my_calendar"
            android:background="#20549f"
            android:onClick="startAppointments"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_marginTop="48sp"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/main_imageButton"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_text3"
            android:id="@+id/main_textView2"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginTop="60sp"
            android:layout_marginStart="60dp"
            android:textSize="18sp"
            android:layout_gravity="right" />

        <ImageButton
            android:id="@+id/main_imageButton2"
            android:src="@android:drawable/ic_dialog_info"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginTop="45sp"
            android:layout_marginStart="10dp"
            android:background="#20549f"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:onClick="startInfos"
            android:contentDescription="@string/main_btn_desc"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_text2"
            android:id="@+id/main_textView3"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_textView4"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_marginTop="60sp"
            android:layout_marginStart="60dp"
            android:textSize="18sp"
            android:text="@string/main_yt_video"
            android:layout_gravity="right" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/main_imageButton3"
            android:layout_row="4"
            android:layout_column="1"
            android:background="@drawable/yt"
            android:layout_marginStart="10dp"
            android:layout_marginTop="35dp"
            android:onClick="startVideo"
            android:contentDescription="@string/main_yt_icon"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_vf_desc"
            android:id="@+id/main_textView5"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_marginStart="75dp"
            android:layout_marginTop="20dp"
            android:layout_columnSpan="2" />

        <ViewFlipper
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_viewFlipper"
            android:layout_column="0"
            android:layout_row="6"
            android:layout_rowSpan="4"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:animateFirstView="true"
            android:autoStart="true"
            android:clickable="true"
            android:flipInterval="4500"
            android:focusable="false">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_imageView2"
                android:src="@drawable/fach"
                android:contentDescription="@string/main_o_woche" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_imageView3"
                android:src="@drawable/fach0"
                android:contentDescription="@string/main_o_woche" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_imageView4"
                android:src="@drawable/fach1"
                android:contentDescription="@string/main_o_woche" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_imageView5"
                android:src="@drawable/fach2"
                android:contentDescription="@string/main_o_woche" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_imageView6"
                android:src="@drawable/fach3"
                android:contentDescription="@string/main_o_woche" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_imageView7"
                android:src="@drawable/fach4"
                android:contentDescription="@string/main_o_woche" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_imageView8"
                android:src="@drawable/fach5"
                android:contentDescription="@string/main_o_woche" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_imageView9"
                android:src="@drawable/fach6"
                android:contentDescription="@string/main_o_woche" />
        </ViewFlipper>

        <Button
            android:text="@string/main_clear_sharedprefs"
            android:id="@+id/main_button_clear"
            android:layout_row="10"
            android:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:layout_gravity="start"
            android:layout_marginTop="20sp"
            android:layout_columnSpan="2" />

    </GridLayout>


</ScrollView>