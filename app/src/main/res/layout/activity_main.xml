<?xml version="1.0" encoding="utf-8"?>
    <GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="8"
        tools:context="fachschaftwirtschaft.fachschaftapp.MainActivity"
>

        <ImageView
            android:id="@+id/imageView"
            android:src="@drawable/logo"
            android:layout_width="600dp"
            android:layout_height="170dp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center" />

    <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/ter_text"
            android:id="@+id/textView9"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_row="3"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="90dp" />

    <ImageButton
            android:id="@+id/imageButton"
            android:src="@android:drawable/ic_menu_my_calendar"
            android:background="#20549f"
            android:onClick="startTermine"
        android:layout_column="1"
        android:layout_gravity="fill_vertical"
        android:layout_row="3"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="40dp"
        android:padding="10dp"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Weitere Infos findest du hier:"
        android:id="@+id/textView10"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="90dp" />

    <ImageButton
        android:id="@+id/imageButton_infos"
        android:src="@android:drawable/ic_dialog_info"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="40dp"
        android:background="#20549f"
        android:padding="10dp" />

    <Button
        android:text="Clear SharedPrefs"
        android:id="@+id/button_clear"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:layout_marginTop="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/main_text"
        android:id="@+id/textView11"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center" />

</GridLayout>


